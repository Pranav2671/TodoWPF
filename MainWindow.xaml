<Window x:Class="TodoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TodoWPF.ViewModels"
        xmlns:conv="clr-namespace:TodoWPF.Converters"
        Title="Todo App"
        WindowState="Maximized"
        WindowStyle="None"
        Background="#E5E7EB">

    <!-- Connect ViewModel -->
    <Window.DataContext>
        <vm:TodoViewModel />
    </Window.DataContext>

    <!-- Register converter -->
    <Window.Resources>
        <conv:BooleanToTextDecorationConverter x:Key="BooleanToTextDecorationConverter" />

        <!-- Button style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4CAF50" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Margin" Value="5,0,0,0" />
            <Setter Property="Width" Value="90" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox style -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="BorderBrush" Value="#CCCCCC" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
    </Window.Resources>

    <!-- Full screen layout -->
    <Grid>
        <!-- Centered main card -->
        <Border Background="White"
                CornerRadius="20"
                Padding="30"
                Width="600"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3" />
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header -->
                    <RowDefinition Height="Auto"/>
                    <!-- Input -->
                    <RowDefinition Height="*"/>
                    <!-- Todo list -->
                </Grid.RowDefinitions>

                <!-- Header -->
                <DockPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="My Todo List"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#1F2937"
                               VerticalAlignment="Center"/>
                </DockPanel>

                <!-- Input + Add Button -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBox Width="400"
                             Margin="0,0,10,0"
                             VerticalContentAlignment="Center"
                             Text="{Binding NewTodoTitle, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Enter new task..."/>
                    <Button Content="Add" Command="{Binding AddCommand}" />
                </StackPanel>

                <!-- Todo List -->
                <ListBox Grid.Row="2"
                         ItemsSource="{Binding Todos}"
                         Background="Transparent"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="12" Margin="0,5" CornerRadius="10" Background="#F3F4F6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <CheckBox IsChecked="{Binding IsCompleted, Mode=TwoWay}" Grid.Column="0" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding Title}"
                                               Grid.Column="1"
                                               FontSize="16"
                                               VerticalAlignment="Center"
                                               TextDecorations="{Binding IsCompleted, Converter={StaticResource BooleanToTextDecorationConverter}}"/>
                                    <Button Content="🗑"
                                            Grid.Column="2"
                                            Width="32"
                                            Height="32"
                                            Background="#FF6B6B"
                                            Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</Window>

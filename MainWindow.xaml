<Window x:Class="TodoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TodoWPF.ViewModels"
        xmlns:conv="clr-namespace:TodoWPF.Converters"
        Title="Todo App"
        WindowState="Normal"
        WindowStyle="None"
        Background="#1E1E1E"
        Width="700" Height="600">

    <Window.DataContext>
        <vm:TodoViewModel />
    </Window.DataContext>

    <Window.Resources>
        <conv:BooleanToTextDecorationConverter x:Key="BooleanToTextDecorationConverter" />

        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2D2D30" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#3C3C3C" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Margin" Value="5,0,0,0" />
            <Setter Property="Width" Value="90" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A3A3D" />
                    <Setter Property="BorderBrush" Value="#5A5A5D" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Background" Value="#2D2D30" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="BorderBrush" Value="#3C3C3C" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="#252526"
                CornerRadius="16"
                Padding="30"
                Width="650"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.4" Color="#000000" />
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <DockPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="🗒️ My Todo List"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#F5F5F5"
                               VerticalAlignment="Center"/>
                </DockPanel>

                <!-- Input -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBox Width="400"
                             Margin="0,0,10,0"
                             VerticalContentAlignment="Center"
                             Text="{Binding NewTaskTitle, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Enter new task..." />
                    <Button Content="➕ Add" Command="{Binding AddTodoCommand}" />
                </StackPanel>

                <!-- Todo List -->
                <ListBox Grid.Row="2"
                         ItemsSource="{Binding TodoItems}"
                         Background="#1E1E1E"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <!-- Outer card -->
                            <Border Padding="12"
                                    Margin="0,5"
                                    CornerRadius="8"
                                    Background="#2D2D30"
                                    Width="580">
                                <!-- 👈 Fixed width for uniform boxes -->
                                <DockPanel LastChildFill="True">
                                    <!-- Task title on the left -->
                                    <TextBlock Text="{Binding Title}"
                       FontSize="16"
                       Foreground="#E0E0E0"
                       VerticalAlignment="Center"
                       TextDecorations="{Binding IsCompleted, Converter={StaticResource BooleanToTextDecorationConverter}}"
                       TextTrimming="CharacterEllipsis"
                       DockPanel.Dock="Left" />

                                    <!-- Buttons on the right -->
                                    <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        DockPanel.Dock="Right">
                                        <Button Content="✏️"
                        Width="32" Height="32"
                        Command="{Binding DataContext.EditTodoCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding}"
                        ToolTip="Edit Task"/>

                                        <Button Content="✅"
                        Width="32" Height="32"
                        Command="{Binding DataContext.MarkCompleteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding}"
                        ToolTip="Mark Complete"/>

                                        <Button Content="❌"
                        Width="32" Height="32"
                        Foreground="#FF6B6B"
                        Command="{Binding DataContext.DeleteTodoCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding}"
                        ToolTip="Delete Task"/>
                                    </StackPanel>
                                </DockPanel>
                            </Border>
                        </DataTemplate>


                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</Window>
